{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/product.schema.json",
  "title": "Configuration",
  "description": "Configuration of ros running file",
  "type": "object",
  "properties": {
    "input_map": {
      "description": "path to a png file contianing map to be evaluated",
      "type": "string",
      "default": {}
    },
    "map_description": {
      "type": "string",
      "description": "Free text for describing used map",
      "default": {}
    },
    "peak_extraction_parameters": {
      "type": "object",
      "description": "parameters used for extraction of strucutre from a mpa",
      "properties": {
        "peak_height": {
          "type": "number",
          "default": {}
        },
        "smooth_histogram": {
          "type": "boolean",
          "default": {}
        },
        "sigma": {
          "type": "number",
          "default": {}
        }
      }
    },
    "filtering_parameters": {
      "type": "object",
      "description": "parmeters used to filter the desired pixels in the map",
      "properties": {
        "filter_level": {
          "type": "number",
          "default": {}
        }
      }
    },
    "visualisation_flags": {
      "type": "object",
      "description": "flags decideing what is going to be shown",
      "properties": {
        "Binary map": {
          "type": "boolean",
          "default": false
        },
        "FFT Spectrum": {
          "type": "boolean",
          "default": false
        },
        "Unfolded FFT Spectrum": {
          "type": "boolean",
          "default": false
        },
        "FFT Spectrum Signal": {
          "type": "boolean",
          "default": false
        },
        "FFT Spectrum Noise": {
          "type": "boolean",
          "default": false
        },
        "Map Reconstructed Signal": {
          "type": "boolean",
          "default": false
        },
        "Map Reconstructed Noise": {
          "type": "boolean",
          "default": false
        },
        "Map Scored Good": {
          "type": "boolean",
          "default": false
        },
        "Map Scored Bad": {
          "type": "boolean",
          "default": false
        },
        "Map Scored Diff": {
          "type": "boolean",
          "default": false
        },
        "Map Split Good": {
          "type": "boolean",
          "default": false
        },
        "FFT Map Split Good": {
          "type": "boolean",
          "default": false
        },
        "Side by Side": {
          "type": "boolean",
          "default": false
        },
        "Histogram of pixels quality": {
          "type": "boolean",
          "default": false
        },
        "Histogram of scaled pixels quality": {
          "type": "boolean",
          "default": false
        },
        "Simple Filtered Map": {
          "type": "boolean",
          "default": false
        },
        "FFT spectrum with directions": {
          "type": "boolean",
          "default": false
        },
        "Map with directions": {
          "type": "boolean",
          "default": false
        },
        "Partial Scores": {
          "type": "boolean",
          "default": false
        },
        "Partial Reconstructs": {
          "type": "boolean",
          "default": false
        },
        "Threshold Setup with Clusters": {
          "type": "boolean",
          "default": false
        },
        "Cluster Filtered Map": {
          "type": "boolean",
          "default": false
        },
        "Map with walls": {
          "type": "boolean",
          "default": false
        },
        "Map with slices": {
          "type": "boolean",
          "default": false
        },
        "Wall lines from mbb": {
          "type": "boolean",
          "default": false
        },
        "Labels and Raw map": {
          "type": "boolean",
          "default": false
        },
        "Raw line segments": {
          "type": "boolean",
          "default": false
        },
        "Clustered line segments": {
          "type": "boolean",
          "default": false
        },
        "Short wall lines from mbb": {
          "type": "boolean",
          "default": false
        },
        "Short wall lines over original map": {
          "type": "boolean",
          "default": false
        },
        "Map and peaks": {
          "type": "boolean",
          "default": false
        },
        "evaluation output": {
          "type": "boolean",
          "default": false
        }
      },
      "default": {}
    }
  },
  "additionalProperties": false,
  "default": {
  }
}